<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.paciente.HistorialPacienteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/input_1">

            <cn.zhaiyifan.rememberedittext.RememberEditText
                android:id="@+id/idetbuscarsalon"
                android:layout_marginEnd="05dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/atma_medium"
                android:hint="Buscar "
                android:inputType="textCapWords"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                app:autoFill="false"
                app:autoSave="true"
                app:rememberId="searchText"
                app:rememberCount="5"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                android:background="@drawable/input_1"
                />

        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/recyclerhistorialpaciente"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="10dp" />

</LinearLayout>